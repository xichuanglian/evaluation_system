%div#sidebar
  %p
    This is the sidebar
%div#main
  %h1 Login

  - if flash[:notice]
    %p.notice
      = flash[:notice]

  = form_tag '/login', :method => :post do
    %div
      = label_tag :username
      = text_field_tag :username
    %div
      = label_tag :password
      = password_field_tag :password
    %div
      = submit_tag "Login"

  = link_to 'Next Generation Login', Settings.login_url

