!!! 5
%html
  %head
    %title Evaluation System
    = stylesheet_link_tag 'Envision'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{"data-controller" => controller_name, "data-action" => action_name}
    %div#wrap
      %div#header
        %h1#logo-text Evaluation System
        %h2#slogan Evaluation Form for Graduate Students
      %div#menu
        %ul
          %li= link_to 'Back to Teacher', teachers_index_path(:id => @user_id)
          - if session[:user]
            %li= link_to 'Log Out', '/logout'
          - else
            %li= link_to 'Log In', '/'
          %li.last= link_to 'About', '/'
      %div#content-wrap
        %div#sidebar
          %ul.sidemenu
            %li= link_to 'Index', admin_index_path
            %li= link_to 'Show Students', admin_show_students_path
            %li= link_to 'Show Teachers', admin_show_teachers_path
        %div#main
          = yield
      %div#footer
